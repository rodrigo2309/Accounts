@using Microsoft.AspNetCore.Identity
@using AccountWebMVC.Areas.Identity.Data
@inject SignInManager<AccountWebMVCUser> SignInManager
@inject UserManager<AccountWebMVCUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Login" asp-action="Login">Login</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login">LoginIdentity</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Register">CadastroIdentity</a></li>
</ul>
}
