@model AccountWebMVC.Models.ViewModels.LocalFormViewModel

@{ ViewData["Title"] = "Create";
    Layout = null;
}

<div class="container">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modalTitle">
                    Local
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </h2>
            </div>
            <div class="modal-body">
                <form asp-action="Create" id="myform">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Local.Nome" class="control-label"></label>
                        <input asp-for="Local.Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Local.Tipo" class="control-label"></label>
                        <select asp-for="Local.TipoID" asp-items="@(new SelectList(Model.Tipo,"Id","Nome"))"
                                class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
